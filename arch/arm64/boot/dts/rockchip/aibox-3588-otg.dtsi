&vcc_sata_pwr_en{
	status = "okay";
	gpio = <&gpio0 RK_PD3 GPIO_ACTIVE_HIGH>;  
	regulator-min-microvolt = <3300000>;
	regulator-max-microvolt = <3300000>;
	regulator-always-on;
	enable-active-high;
	startup-delay-us = <5000>;
	vin-supply = <&vcc12v_dcin>;
};

/* pinctrl */
&pinctrl {
	headphone {
		hp_det: hp-det {
			rockchip,pins = <1 RK_PC4 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};

	leds {
		leds_gpio: leds-gpio {
			/* led_power */
			rockchip,pins = <3 16 RK_FUNC_GPIO &pcfg_pull_none>,
							<3 17 RK_FUNC_GPIO &pcfg_pull_none>,
							<2 19 RK_FUNC_GPIO &pcfg_pull_none>;
		};
 	};

 	hym8563 {
		hym8563_int: hym8563-int {
			rockchip,pins = <0 RK_PB0 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};

	usb-typec { 
		usbc0_int: usbc0-int { 
			rockchip,pins = <1 RK_PC2 RK_FUNC_GPIO &pcfg_pull_none>; 
		}; 
		usb3_host0_typec0_sw_en: usb3-host0-typec0-sw-en{
   			rockchip,pins = <1 RK_PD2 RK_FUNC_GPIO &pcfg_pull_none>;
  		};
  		usb3_host0_typec0_sw1_en: usb3-host0-typec0-sw1-en{
   			rockchip,pins = <4 RK_PC3 RK_FUNC_GPIO &pcfg_pull_none>;
  		};

	};

	hdmirx {
		hdmirx_det: hdmirx-det {
			rockchip,pins = <1 RK_PD5 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};

	wdt {
		wdt_pc92: wdt_pc92 {
			rockchip,pins = <3 RK_PC4 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};

	wireless-bluetooth {
		uart6_gpios: uart6-gpios {
			rockchip,pins = <1 RK_PA2 RK_FUNC_GPIO &pcfg_pull_none>;
		};

		bt_reset_gpio: bt-reset-gpio {
			rockchip,pins = <0 RK_PC6 RK_FUNC_GPIO &pcfg_pull_none>;
		};

		bt_wake_gpio: bt-wake-gpio {
			rockchip,pins = <0 RK_PC5 RK_FUNC_GPIO &pcfg_pull_none>;
		};

		bt_irq_gpio: bt-irq-gpio {
			rockchip,pins = <0 RK_PA0 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};

	wireless-wlan {
		wifi_host_wake_irq: wifi-host-wake-irq {
			rockchip,pins = <0 RK_PB2 RK_FUNC_GPIO &pcfg_pull_none>;
		};

		wifi_poweren_gpio: wifi-poweren-gpio {
			rockchip,pins = <0 RK_PC4 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};
};
