 #define rk3588
 #include "rk3588-firefly-port.dtsi"
 #include "rk3588-diff.dtsi"

#define M2_SATA_OR_PCIE 0 /*1 = SATA , 0 = PCIe */
#define TYPEC_OTG_20 1 /*1 = OTG , 0 = HOST */

 / {

	usb3_host0_typec0_sw: usb3-host0-typec0-sw {
  		compatible = "regulator-fixed";
                regulator-name = "usb3_host0_typec0_sw";
                regulator-min-microvolt = <1800000>;
                regulator-max-microvolt = <1800000>;
                regulator-always-on;
                regulator-boot-on;
				enable-active-low;
				gpio = <&gpio1 RK_PD2 GPIO_ACTIVE_LOW>;
                pinctrl-names = "default";
                pinctrl-0 = <&usb3_host0_typec0_sw_en>;
	 };

 	usb3_host0_typec0_sw1: usb3-host0-typec0-sw1 {
  		compatible = "regulator-fixed";
                regulator-name = "usb3_host0_typec0_sw1";
                regulator-min-microvolt = <1800000>;
                regulator-max-microvolt = <1800000>;
                regulator-always-on;
                regulator-boot-on;
                enable-active-low;
                gpio = <&gpio4 RK_PC3 GPIO_ACTIVE_LOW>;
                pinctrl-names = "default";
                pinctrl-0 = <&usb3_host0_typec0_sw1_en>;
 	};

/* led */
	firefly_leds: leds {
		pinctrl-names = "default";
		pinctrl-0 =<&leds_gpio>;
		power_led: power {
			gpios = <&gpio2 RK_PC3 GPIO_ACTIVE_HIGH>;//blue led
		};

		user_led: user {
			gpios = < &gpio3 RK_PC1 GPIO_ACTIVE_HIGH>;//red led
		};

		user1_led: user1 {
			label = ":user1"; 
			default-state = "off";
			gpios = <&gpio3 RK_PC0 GPIO_ACTIVE_HIGH>;//green led
		};
	};

 	fan: pwm-fan {
		compatible = "pwm-fan";
		#cooling-cells = <2>;
		fan-supply = <&vcc5v0_sys>;
		pwms = <&pwm5 0 50000 0>;
		cooling-levels = <0 50 100 150 200 255>;
        rockchip,temp-trips = <
            50000   1
            55000   2
            60000   3
            65000   4
            70000   5
        >;
	};
};

#if TYPEC_OTG_20
&vbus5v0_typec_pwr_en{
	status = "okay";
	gpio = <&gpio1 RK_PD1 GPIO_ACTIVE_HIGH>; 
};

/delete-node/ &usbc0;

&usbdrd_dwc3_0 {
	status = "okay";
	dr_mode = "otg";
};

&u2phy0 {
	status = "okay";
	orientation-switch;
	port {
			#address-cells = <1>;
			#size-cells = <0>;
			u2phy0_orientation_switch: endpoint@0 {
					reg = <0>;
					remote-endpoint = <&usbc0_orien_sw>;
			};
		};
};

&u2phy0_otg { 
	status = "okay";
}; 
#else
&vbus5v0_typec_pwr_en {
    status = "okay";
    regulator-boot-on;
    regulator-always-on;
    enable-active-high;
    gpio = <&gpio1 RK_PD1 GPIO_ACTIVE_HIGH>;
};

&usbdrd_dwc3_0 {
	status = "okay";
	dr_mode = "host";
};

&u2phy0 {
	status = "okay";
};

&u2phy0_otg { 
   phy-supply  = <&vbus5v0_typec_pwr_en>;
   status = "okay";
}; 
#endif

